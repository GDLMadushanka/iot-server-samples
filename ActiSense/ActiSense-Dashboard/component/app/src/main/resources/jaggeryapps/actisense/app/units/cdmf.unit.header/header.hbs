{{#zone "header"}}
    <header class="header header-default">
        <div class="container-fluid">
            <div class="pull-left brand">
                {{defineZone "brand"}}
            </div>
            <div class="pull-right auth">
                {{defineZone "userMenu"}}
            </div>
            <div class="col-lg-offset-2">
            <div class="pull-left">
                <ul class="nav navbar-right float-remove-xs text-center-xs">
                    <li class="visible-inline-block">
                        <a href="{{@app.context}}/devices" class="dropdown add-padding-top-3x">My Devices</a>
                    </li>
                    {{#if permissions.ADD_DEVICE_SENSEME}}
                    <li class="visible-inline-block">
                        <a href="{{@app.context}}/device/senseme/enroll" class="dropdown add-padding-top-3x">
                            Enroll SenseMe
                        </a>
                    </li>
                    {{/if}}
                    {{#if permissions.ADD_DEVICE_ALERTME}}
                    <li class="visible-inline-block">
                        <a href="{{@app.context}}/device/alertme/enroll" class="dropdown add-padding-top-3x">
                            Enroll AlertMe
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </header>
{{/zone}}